{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "dist",
      "build",
      "src/lib",
      "src/layouts",
      "src/utils/**/*",
      "src/pages/demo/**/*.tsx",
      "scripts",
      "config/**/*.js",
      "node_modules"
    ]
  },
  "rules": {
    "jsx-no-lambda": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "jsx-no-string-ref": false,
    // "rxjs-pipeable-operators-only": true,
    // "rxjs-no-static-observable-methods": true,
    "max-classes-per-file": false,
    "interface-name": false,
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "ban": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "eofline": false,
    "forin": true,
    "indent": [
      true,
      "spaces"
    ],
    "jsdoc-format": true,
    "jsx-curly-spacing": false,
    "jsx-no-multiline-js": false,
    "label-position": true,
    // "max-line-length": [
    //   true,
    //   80
    // ],
    "member-ordering": [
      true,
      "public-before-private"
    ],
    "one-variable-per-declaration": false,
    "no-arg": true,
    "no-bitwise": false,
    "no-console": [
      true,
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "switch-default": true,
    "trailing-comma": [
      false
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
